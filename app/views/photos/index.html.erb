<% @photos.each do |photo| %>
  <div class="row-fluid">
    <div class="photo span12">
      <%= image_tag photo.image.url %>
      <div class="row-fluid">
        <div class="span12 photo-detail">
          <div class="row-fluid">
            <div class="span6">
              <h1><%= photo.name %></h1>
            </div>
            <div class="span2 photo-content img-circle">
              <h3><%= photo.aperture %></h3>
            </div>
            <div class="span2 photo-content img-circle">
              <h3><%= photo.speed %></h3>
            </div>
            <div class="span2 photo-content img-circle">
              <h3><%= photo.iso %></h3>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <h4><%= photo.content %></h4>
            </div>
          </div>
        </div> <!-- photo-detail --> 
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'New Photo', new_photo_path %>
